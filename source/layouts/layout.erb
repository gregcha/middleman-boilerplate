<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% link_to "/index.html", class: "navbar-brand" do %>
            <%= image_tag 'logo-orange.png', alt:'Orange Hunt' %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>
              <% link_to "/pricing.html" do %>
                <i class="fa fa-dollar"></i> Pricing
              <% end %>
            </li>
            <li>
              <% link_to "/buddies.html" do %>
                <i class="fa fa-beer"></i> Buddies
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Follow-us <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="https://www.facebook.com/lewagonformation"><i class="fa fa-facebook-square"></i> Facebook</a></li>
                <li><a href="https://twitter.com/lewagonparis"><i class="fa fa-twitter-square"></i> Twitter</a></li>
              </ul>
            <!-- <a href="#" data-toggle="modal" data-target="#subscribe-modal" class="btn">Order now</a> -->
            <li><button data-toggle="modal" data-target="#sign-in-modal" class="btn">Sign-in</button></li>
            <div class="modal fade" id="sign-in-modal">
              <div class="pop-up">
                <p>Welcome back on Orange Hunt!</p>
                <form action="/">
                  <input type="email" class="form-control" placeholder="bob@gmail.com">
                  <input type="password" class="form-control" placeholder="*********">
                  <input type="submit" value="Sign-In" class="btn">
                </form>
              </div>
            </div>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="padded"></div>

    <%= yield %>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <div class="list-inline pull-left">
              <a href="#"><i class="fa fa-facebook"></i></a>
              <a href="#"><i class="fa fa-twitter"></i></a>
              <a href="#"><i class="fa fa-instagram"></i></a>
              <a href="#"><i class="fa fa-github"></i></a>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="pull-right">
              <p>Made with <i id ="beer" class="fa fa-beer"></i> by Gr√©goire</p>
            </div>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </body>
</html>
